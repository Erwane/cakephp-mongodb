{
    "name": "erwane/cakephp-mongodb",
    "description": "MongoDB support for CakePHP 4.x & 5.X",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "mongodb",
        "datasource",
        "database"
    ],
    "license": "MIT",
    "homepage": "https://github.com/Erwane/cakephp-mongodb",
    "authors": [
        {
            "name": "Erwane",
            "email": "erwane@phea.fr"
        }
    ],
    "support": {
        "issues": "https://github.com/Erwane/cakephp-mongodb/issues",
        "source": "https://github.com/Erwane/cakephp-mongodb"
    },
    "require": {
        "php": ">=8.1",
        "ext-mongodb": ">=1.20",
        "cakephp/cakephp": "^5.0",
        "mongodb/mongodb": "^1.20"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^5.0",
        "phpunit/phpunit": "^10.5.5 || ^11.1.3"
    },
    "autoload": {
        "psr-4": {
            "CakeMongo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CakeMongo\\Test\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": "phpcs -p src/ tests/",
        "cs-fix": "phpcbf -p src/ tests/",
        "test": "phpunit"
    },
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
